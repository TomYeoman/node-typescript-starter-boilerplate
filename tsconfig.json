{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "src/dist", // where to put the compiled JS files,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@logger/*": [
        "src/logger/*"
      ],
      "@model": [
        "src/api/model/index"
      ],
      "@model/*": [
        "src/api/model/*"
      ],
      "@test/*": [
        "__tests__/*"
      ],
    }
  },
  "include": [
    "src"
  ], // which files to compile
  "exclude": [
    "node_modules"
  ], // which files to skip
}